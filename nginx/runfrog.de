# ------------------
# runfrog.de
# ------------------
access_log /var/www/logs/runfrog.de_access.log;
error_log /var/www/logs/runfrog.de_error.log;

server {
    listen 80;
    listen [::]:80;

    server_name runfrog.de www.runfrog.de;

    # letsencrypt webroot authenticator
    location /.well-known/acme-challenge/ {
        root /usr/share/nginx/letsencrypt;
    }

    # https redirects
    location = / {
        return 301 https://runfrog.de$request_uri;
     }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name www.runfrog.de;
    ssl_certificate     /etc/letsencrypt/live/runfrog.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/runfrog.de/privkey.pem;

    return 301 https://runfrog.de$request_uri;
}

server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;

        server_name runfrog.de;

        ssl_certificate     /etc/letsencrypt/live/runfrog.de/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/runfrog.de/privkey.pem;
        include /etc/nginx/snippets/ssl.conf;

        client_max_body_size 100m;
        proxy_connect_timeout       900;
        proxy_send_timeout          900;
        proxy_read_timeout          900;
        send_timeout                900;

        location / {
                proxy_pass http://192.168.0.55:8086;
                proxy_set_header HOST $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-for $remote_addr;
                proxy_set_header X-Forwarded-Proto https;
                port_in_redirect off;
        }

}
